default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # API Key setup
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_KEY_CONTENT"],
      is_key_content_base64: false # We will store the P8 content as raw text in secrets
    )

    # Clean previous builds
    clear_derived_data
    
    # Fetch/Create Certificate
    get_certificates(
      api_key: api_key,
      output_path: "fastlane/certificates",
      development: false
    )

    # Fetch/Create Provisioning Profile
    get_provisioning_profile(
      api_key: api_key,
      development: false,
      app_identifier: "com.metestudios.flowifygame",
      output_path: "fastlane/profiles"
    )

    # Build the app - gym will find the profile automatically
    gym(
      scheme: "App",
      workspace: "App.xcworkspace",
      output_directory: "build",
      output_name: "App.ipa",
      include_bitcode: false,
      export_method: "app-store",
      xcargs: "CODE_SIGNING_REQUIRED=YES CODE_SIGNING_ALLOWED=YES",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "com.metestudios.flowifygame" => "AppStore com.metestudios.flowifygame"
        }
      }
    )

    # Upload to TestFlight
    pilot(
      api_key: api_key,
      ipa: "build/App.ipa",
      skip_waiting_for_build_processing: true
    )
  end
end
